apiVersion: apps/v1
kind: DaemonSet
metadata:  
  name: example-daemonset2
spec:  
  selector:    
    matchLabels:      
      name: example-daemonset2
  template:    
    metadata:      
      labels:        
        name: example-daemonset2  
    spec:      
      terminationGracePeriodSeconds: 60      
      containers:      
      - name: example-container        
        image: example-image        
        lifecycle:          
          preStop:            
            exec:              
              command: ["/bin/sh", "-c", "echo 'Gracefully terminating...' && sleep 30"]
        resources:
          requests:
            cpu: "100m"
            memory: "4Gi"
