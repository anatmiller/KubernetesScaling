    name = "debian_base_amd64",
    registry = "k8s.gcr.io",
    repository = "debian-base-amd64",
    tag = "0.3.2",
    # 'tag' is also supported, but digest is encouraged for reproducibility.
    digest = "sha256:3a6ec824717e1ca5bb136ffa3dfbd854f109a0b2b376dd2cf9701d4669778fd2",
)

